# Server Configuration
PORT=3001
NODE_ENV=production

# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Zoho Configuration
ZOHO_CLIENT_ID=your_zoho_client_id
ZOHO_CLIENT_SECRET=your_zoho_client_secret
ZOHO_REFRESH_TOKEN=your_zoho_refresh_token
ZOHO_ORG_ID=your_zoho_org_id

# Company Configuration
COMPANY_ID=87dcc6db-2e24-46fb-9a12-7886f690a326

# Sync Configuration
SYNC_INTERVAL_MINUTES=30
ENABLE_SCHEDULED_SYNC=true

# API Configuration
API_KEY=your_secure_api_key_here

# Rate Limiting Configuration (all optional with safe defaults)
# Basic throttling
ZOHO_BASE_DELAY_MS=500              # Base delay between requests (default: 500ms)
ZOHO_BATCH_SIZE=25                  # Records per batch for database operations (default: 25)
ZOHO_MAX_RETRIES=3                  # Maximum retry attempts (default: 3)

# Rate limiting
ZOHO_REQUESTS_PER_SECOND=10         # Maximum requests per second (default: 10)
ZOHO_BURST_SIZE=5                   # Token bucket burst size (default: 5)

# Safety limits
ZOHO_MAX_RECORDS_PER_SYNC=1000      # Maximum records per sync operation (default: 1000)
ZOHO_MAX_CONCURRENT=3               # Maximum concurrent requests (default: 3)

# Adaptive throttling
ZOHO_ADAPTIVE_THROTTLING=true       # Enable adaptive delay adjustment (default: false)
ZOHO_SLOW_RESPONSE_MS=2000          # Threshold for slow response time (default: 2000ms)

# Circuit breaker
ZOHO_CIRCUIT_BREAKER=true           # Enable circuit breaker pattern (default: false)
ZOHO_FAILURE_THRESHOLD=5            # Consecutive failures before opening circuit (default: 5)
ZOHO_RECOVERY_TIME_MS=60000         # Recovery time before trying again (default: 60000ms)